@using Microsoft.AspNetCore.Components
@using HarrisPharmacy.App.HelperClasses
@inherits Microsoft.AspNetCore.Components.LayoutComponentBase
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>

        <!-- Uncomment this annd comment everything from <SlidingNav /> to </nav> for old side bar -->
        @*<div class="sidebar">
                <NavMenu />
            </div>

            <div class="main">
                <div class="top-row px-4">
                    <LoginDisplay />
                    <a href="https://docs.microsoft.com/en-us/aspnet/" target="_blank">About</a>
                </div>*@

        <SlidingNav />
        <BottomNav />
        <div id="main" class="main">
            <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
                <ul class="navbar-nav mr-auto">
                    <li>
                        <div class="row">
                            <div class="col align-self-center">
                                <span onclick="toggleNav()" class="navbar-hide"><i class="fas fa-bars navbar-brand hover"></i></span>
                                <a class="navbar-brand pl-1 m-0" href="">
                                    <img src="img/harris-white.png" class="small">
                                    <span class="navbar-hide">
                                        Harris Healthcare
                                    </span>
                                </a>
                                <div class="navbar-brand navbar-page">
                                    @PageHeaderHelper.GetPageHeader(NavigationManager.Uri)
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
                <a href="/Identity/Account/LogOut" class="text-decoration-none hover">
                    <span class="navbar-hide navbar-brand mr-1">Logout</span>
                    <span class="oi oi-account-logout hover navbar-brand form-inline my-2 my-lg-0 mr-2" style="height:100%;" aria-hidden="true"></span>
                </a>
            </nav>

            <div class="content px-4">
                @Body
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div id="outer">
            <div id="middle">
                <div id="inner">
                    <img src="img/harris-logo.png" class="large">
                    <div id="buttons">
                        <a href="Identity/Account/Login" class="button">Login</a>
                        <a href="Identity/Account/Register" class="button">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>